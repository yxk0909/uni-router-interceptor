{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types/"
  },
  "include": ["./src/**/*", "./src/**/*.d.ts"]
}
